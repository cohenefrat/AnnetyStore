@model Annety.ItemInCart

@{
    ViewBag.Title = "BeforPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BeforPayment</h2>
<html>
<body>
        <div class="form-horizontal">
            <h4>Total:</h4> @Model.Product.Price
            <hr />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button value="Pay" onclick="Payment()"></button>
                </div>
            </div>
        </div>
    

<script>
    function Payment()
    {
        var url = '@Url.Action("Payment", "SearchResult")';
        document.location.href = url;
    }
</script>
</body>
</html>