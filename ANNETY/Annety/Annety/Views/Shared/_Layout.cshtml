<!DOCTYPE html>
@{ AnnetyEntities db = new AnnetyEntities();}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6"><h1 style="text-align:center; color:white">Annety</h1></div>
                <div class="col-lg-6">@Html.Partial("_LoginPartial")</div>
            </div>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col-xs-1" style="padding-top:1em; padding-left:2em;">
                <h4>Boys</h4> <hr />
                @foreach (var item in db.Categories)
            {
                if (item.ParentCategory == true)
                {   <a href='@Url.Action("FromMenu", "SearchResult", new { item.CategoryCode })' >

                    @Html.DisplayFor(modelItem => item.Desc)
                    <hr />
                </a>
                    }
                }
                <h4>Girls</h4>
                @foreach (var item in db.Categories)
            {
                if (item.ParentCategory != true)
                {  <a href='@Url.Action("FromMenu", "SearchResult", new { item.CategoryCode })'>

                    @Html.DisplayFor(modelItem => item.Desc)
                    <hr />
                  </a>
                    }
                }

            </div>
            <div style="padding-left:2em;">
                @RenderBody()
                <hr />
            </div>
        </div>
        <footer class="navbar-fixed-bottom">
            <div style="text-align:center">@Html.ActionLink("New Arrival", "Index", "Home")</div>
            <div class="navbar-collapse collapse" style="text-align:center">
                <ol class="nav navbar-nav" style="text-align:center">
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Sale", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li>@Html.ActionLink("For Manager", "Manage", "Home")</li>
                </ol>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
