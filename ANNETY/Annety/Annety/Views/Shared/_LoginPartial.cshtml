<body>
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "LogOff", name = "LogOff", @class = "navbar-right" }))
    {
        if (Session["UserDetails"] == null)//לא מאומת
        {
            <link href="~/Content/bootstrap.css" rel="stylesheet" />
