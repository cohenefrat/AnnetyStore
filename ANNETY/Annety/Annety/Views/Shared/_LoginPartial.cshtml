                <a href='../Users/LoginPage'>Login</a>
            </div>

            <div id="registerLink" style="float:right"><a href="@Url.Action("Create", "Users")">Register</a></div>
        }

        else//מאומת
        {
            <p style="font-size:15px; font-family:Tahoma;width:100px;float:right;">Hi @Session["UserDetails"].ToString()</p>
            <div>
                <a href="javascript:document.getElementById('LogOff').submit()" id="LogoutBtn">Logout</a>
            </div>
            <br />
            <div id="registerLink" style="float:right"><a href="@Url.Action("LogOff", "Account")">Register</a></div>
            <br />
            <input type="submit" value="logout" />
        }
    }
